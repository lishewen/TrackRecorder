<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackRecorder.Pages.FileManagementPage"
             Title="文件管理">

    <Grid RowDefinitions="Auto,Auto,*">
        <Label Text="GPX文件管理" FontSize="20" 
               HorizontalOptions="Center" Margin="10" Grid.Row="0"/>

        <Button Text="刷新文件列表" Clicked="OnRefreshClicked" 
                HorizontalOptions="Center" Margin="10" Grid.Row="1"/>

        <CollectionView x:Name="FilesCollectionView" Grid.Row="2" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*,Auto,Auto">
                        <Label Text="{Binding FileName}" VerticalOptions="Center"/>
                        <Button Text="打开" Clicked="OnOpenFileClicked" 
                                CommandParameter="{Binding FilePath}" 
                                Grid.Column="1" Margin="5,0"/>
                        <Button Text="删除" Clicked="OnDeleteFileClicked" 
                                CommandParameter="{Binding FilePath}" 
                                Grid.Column="2" Margin="5,0" 
                                BackgroundColor="Red" TextColor="White"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>